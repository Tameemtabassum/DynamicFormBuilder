@model DynamicFormBuilder.Models.FormModel
@{
    ViewData["Title"] = "Form Preview";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Form Preview (Using View Components)</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h4 class="text-primary">@Model.FormTitle</h4>
                        <p class="text-muted">Created on: @Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                    </div>

                    <hr>

                    @if (Model.Fields != null && Model.Fields.Any())
                    {
                        <div class="row">
                            @foreach (var field in Model.Fields)
                            {
                                @await Component.InvokeAsync("DropdownField", field)
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No fields found for this form.
                        </div>
                    }

                    <hr>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a href="@Url.Action("Index", "Form")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>