@{
    ViewData["Title"] = "Forms List";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Dynamic Forms</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Form")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Form
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table id="formsTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Form ID</th>
                        <th>Form Title</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                       
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#formsTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetForms", "Form")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (d) {
                        return JSON.stringify(d);
                    },
                    error: function (xhr, error, thrown) {
                        console.error('DataTable Error:', error);
                        alert('Error loading data. Please refresh the page.');
                    }
                },
                columns: [
                    { data: 'formId', width: '10%' },
                    { data: 'formTitle', width: '50%' },
                    {
                        data: 'createdDate',
                        width: '20%',
                        render: function (data) {
                            return new Date(data).toLocaleDateString('en-US');
                        }
                    },
                    {
                        data: null,
                        width: '20%',
                        orderable: false,
                        render: function (data, type, row) {
                                return `
            <a href="/Form/Preview/${row.formId}" class="btn btn-sm btn-info">
                <i class="bi bi-eye"></i> Preview
            </a>
            <a href="/Form/Edit/${row.formId}" class="btn btn-sm btn-warning ms-1">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="/Form/Delete/${row.formId}" class="btn btn-sm btn-danger ms-1">
                <i class="bi bi-trash"></i> Delete
            </a>
        `;

                        }
                    }
                ],
                order: [[0, 'desc']],
                pageLength: 10,
                language: {
                    emptyTable: "No forms created yet. Click 'Create New Form' to get started."
                }
            });
        });
    </script>
}