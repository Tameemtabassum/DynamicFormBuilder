@model DynamicFormBuilder.Models.ParticipantsModel

<h2 class="text-center mb-4 text-danger fw-bold">Delete Participant</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4 w-100" style="max-width: 600px; border-left: 5px solid #dc3545;">
        <h4>Are you sure you want to delete this participant?</h4>

        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Country</dt>
            <dd class="col-sm-9">@Model.Country</dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger w-100 mt-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
        </form>
    </div>
</div>
