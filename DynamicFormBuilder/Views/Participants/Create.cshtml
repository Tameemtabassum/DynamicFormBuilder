@model DynamicFormBuilder.Models.ParticipantsModel

<h2 class="text-center mb-4 text-primary fw-bold">Add New Participant</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4 w-100"
         style="max-width: 600px; border-left: 5px solid #0d6efd;">

        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold text-primary"></label>
                <input asp-for="Name" class="form-control border-primary" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold text-primary"></label>
                <input asp-for="Email" class="form-control border-primary" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-semibold text-primary"></label>
                <input asp-for="Phone" class="form-control border-primary" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label fw-semibold text-primary"></label>
                <input asp-for="Address" class="form-control border-primary" />
            </div>

            <div class="mb-3">
                <label asp-for="Country" class="form-label fw-semibold text-primary"></label>
                <input asp-for="Country" class="form-control border-primary" />
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2 fw-semibold">
                Add Participant
            </button>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
