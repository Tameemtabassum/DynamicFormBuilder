@model EmployeeModel
@{
    ViewData["Title"] = "Delete Employee";
}

<h2 class="text-danger mb-4">⚠️ Delete Employee</h2>

<div class="alert alert-danger" role="alert">
    <strong>Warning!</strong> Are you sure you want to delete this employee? This action cannot be undone.
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Employee Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Employee ID:</dt>
            <dd class="col-sm-9">@Model.EmployeeId</dd>

            <dt class="col-sm-3">Full Name:</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Designation:</dt>
            <dd class="col-sm-9">@Model.Designation</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsActive == true ? "bg-success" : "bg-danger")">
                    @(Model.IsActive == true ? "Active" : "InActive")
                </span>
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Yes, Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </div>
</form>