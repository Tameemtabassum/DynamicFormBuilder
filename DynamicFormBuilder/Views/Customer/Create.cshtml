@model DynamicFormBuilder.Models.CustomerModel
@{
    ViewData["Title"] = "Create Customer";
}

<h2>Create Customer</h2>

<form asp-controller="Customer" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group">

        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" type="text" class="form-control" maxlength="11" pattern="01\d{9}" />
        <span asp-validation-for="Phone" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NID"></label>
        <input asp-for="NID" type="text" class="form-control" maxlength="12" pattern="\d{12}" />
        <span asp-validation-for="NID" class="text-danger"></span>
        
      
    </div>

    <div class="form-group">
        <label asp-for="DivisionID">Division</label>
        <select asp-for="DivisionID" class="form-control" asp-items="ViewBag.DivisionList" id="DivisionID">
            <option value="">-- Select Division --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DistrictID">District</label>
        <select asp-for="DistrictID" class="form-control" asp-items="ViewBag.DistrictList" id="DistrictID">
            <option value="">-- Select District --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" type="date" class="form-control" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Profession"></label>
        <input asp-for="Profession" class="form-control" />
        <span asp-validation-for="Profession" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Balance"></label>
        <input asp-for="Balance" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#DivisionID").on("change", function () {
            var divisionId = $(this).val();

            $("#DistrictID").empty().append(
                $('<option>').val('').text('-- Select District --')
            );

            if (divisionId) {
                $.ajax({
                    url: "/Customer/GetDistricts",
                    type: "GET",
                    data: { divisionId: divisionId },
                    success: function (data) {
                        $.each(data, function (i, district) {
                            $("#DistrictID").append(
                                $('<option>')
                                            .val(district.districtID ?? district.DistrictID)
        .text(district.districtName ?? district.DistrictName)

                            );
                        });
                    }
                });
            }
        });
    </script>
}


