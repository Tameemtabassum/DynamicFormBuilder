@model DynamicFormBuilder.Models.CustomerModel
@{
    ViewData["Title"] = "Edit Customer";
}

<style>
    body {
        background: #f2f6fc;
        font-family: 'Segoe UI', sans-serif;
    }

    .edit-container {
        max-width: 600px;
        margin: 40px auto;
    }

    .edit-card {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.12);
    }

    .edit-title {
        text-align: center;
        font-weight: 600;
        margin-bottom: 20px;
        color: #2d5eff;
    }

    label {
        font-weight: 600;
        color: #333;
    }

    .btn-primary {
        background-color: #2d5eff;
        border: none;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #1a47d1;
    }

    .btn-secondary {
        font-weight: 600;
    }
</style>

<div class="edit-container">
    <div class="edit-card">

        <h2 class="edit-title">Edit Customer</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CustomerID" />

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NID"></label>
                <input asp-for="NID" class="form-control" />
                <span asp-validation-for="NID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DivisionID">Division</label>
                <select asp-for="DivisionID" class="form-control" asp-items="ViewBag.DivisionList" id="DivisionID">
                    <option value="">-- Select Division --</option>
                </select>
                <span asp-validation-for="DivisionID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DistrictID">District</label>
                <select asp-for="DistrictID" class="form-control" asp-items="ViewBag.DistrictList" id="DistrictID">
                    <option value="">-- Select District --</option>
                </select>
                <span asp-validation-for="DistrictID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DOB"></label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Profession"></label>
                <input asp-for="Profession" class="form-control" />
                <span asp-validation-for="Profession" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Balance"></label>
                <input asp-for="Balance" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>

            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-primary px-4">Update</button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-load district list on page load
        $(document).ready(function () {

            var selectedDivision = $("#DivisionID").val();
            var selectedDistrict = "@Model.DistrictID";

            if (selectedDivision) {

                $("#DistrictID").empty().append(
                    $('<option>').val('').text('-- Select District --')
                );

                $.ajax({
                    url: "/Customer/GetDistricts",
                    type: "GET",
                    data: { divisionId: selectedDivision },
                    success: function (data) {
                        $.each(data, function (i, district) {
                            var option = $('<option>')
                                .val(district.districtID ?? district.DistrictID)
                                .text(district.districtName ?? district.DistrictName);

                            if (option.val() == selectedDistrict) {
                                option.attr("selected", "selected");
                            }

                            $("#DistrictID").append(option);
                        });
                    }
                });
            }
        });

        // When division changes
        $("#DivisionID").on("change", function () {
            var divisionId = $(this).val();

            $("#DistrictID").empty().append(
                $('<option>').val('').text('-- Select District --')
            );

            if (divisionId) {
                $.ajax({
                    url: "/Customer/GetDistricts",
                    type: "GET",
                    data: { divisionId: divisionId },
                    success: function (data) {
                        $.each(data, function (i, district) {
                            $("#DistrictID").append(
                                $('<option>')
                                    .val(district.districtID ?? district.DistrictID)
                                    .text(district.districtName ?? district.DistrictName)
                            );
                        });
                    }
                });
            }
        });
    </script>
}
