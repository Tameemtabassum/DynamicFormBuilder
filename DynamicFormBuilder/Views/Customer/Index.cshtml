@using DynamicFormBuilder.ViewModels
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<DynamicFormBuilder.ViewModels.CustomerViewModel>

@{
    ViewData["Title"] = "Customer List";
    var count = Model.FirstItemOnPage;
}

<h2 class="mt-3">Customer List</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-primary" asp-action="Create">Add New Customer</a>
        <a asp-action="Excel_Download"
           asp-route-phone="@(ViewBag.Phone ?? "")"
           asp-route-divisionId="@(ViewBag.DivisionId ?? 0)"
           class="btn btn-success">
            Download Excel
        </a>
    </div>
    <div>
        <span class="badge bg-info text-dark">Total Records: @Model.TotalItemCount</span>
    </div>
</div>

<!-- Search Form -->
<form method="get" asp-action="Index" class="mb-3">
    <div class="row g-2 align-items-end">

        <!-- Phone -->
        <div class="col-md-3">
            <input type="text"
                   name="phone"
                   value="@ViewBag.Phone"
                   class="form-control"
                   placeholder="🔍 Search by phone number..." />
        </div>
        <!-- Division -->
        <div class="col-md-3">
            <select name="divisionId" class="form-control">
                <option value="" style="color:lightgray;">🔍 Search by Division...</option>
                @foreach (var division in (List<SelectListItem>)ViewBag.DivisionList)
                {
                    <option value="@division.Value"
                            selected="@(ViewBag.DivisionId?.ToString() == division.Value)">
                        @division.Text
                    </option>
                }
            </select>
        </div>
       
        <!-- Search Button -->
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>

        <!-- Reset Button -->
        <div class="col-md-2 d-grid">
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>

    </div>
</form>

<!-- Table -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>SL</th>
            <th>Full Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>NID</th>
            <th>Division</th>
            <th>District</th>
            <th>DOB</th>
            <th>Profession</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@(count++)</td>
                    <td>@item.FullName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.NID</td>
                    <td>@item.DivisionName</td>
                    <td>@item.DistrictName</td>
                    <td>@(item.DOB?.ToString("yyyy-MM-dd"))</td>
                    <td>@item.Profession</td>
                    <td>@item.Balance.ToString("N2")</td>
                    
                    <td style="text-align: center;">
                        <div class="dropdown">
                            <button class="btn btn-info btn-sm dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButton_@item.CustomerID"
                                    data-bs-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                                Action
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton_@item.CustomerID">
                                <li>
                                    <button class="dropdown-item"
                                            type="button"
                                            onclick="loadCustomerEdit('@item.CustomerID')">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item"
                                            type="button"
                                            onclick="loadCustomerDetails('@item.CustomerID')">
                                        <i class="bi bi-eye"></i> Details
                                    </button>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <button class="dropdown-item text-danger"
                                            type="button"
                                            onclick="loadCustomerDelete('@item.CustomerID')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center text-muted">No customers found.</td>
            </tr>
        }
    </tbody>
</table>



<!-- Pagination Controls -->
<div class="mx-2 my-2">
    @Html.PaginationFor(
        Model,
        page => Url.Action("Index", new
        {
            phone = ViewBag.Phone,
            divisionId = ViewBag.DivisionId,
            page,
            pageSize = Model.PageSize
        })
    )
</div>

<!-- DETAILS MODAL -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Customer Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsModalBody">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- EDIT MODAL -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editModalBody">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="deleteModalBody">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load Customer Details
        function loadCustomerDetails(id) {
            var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            modal.show();

            $('#detailsModalBody').html(`
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `);

            $.ajax({
                url: '@Url.Action("Details", "Customer")',
                type: 'GET',
                data: { id: id },
                success: function(result) {
                    $('#detailsModalBody').html(result);
                },
                error: function(xhr, status, error) {
                    $('#detailsModalBody').html(`
                        <div class="alert alert-danger">
                            <h4>Error</h4>
                            <p>Failed to load customer details. Please try again.</p>
                        </div>
                    `);
                }
            });
        }

        // Load Customer Edit Form
        function loadCustomerEdit(id) {
            var modal = new bootstrap.Modal(document.getElementById('editModal'));
            modal.show();

            $('#editModalBody').html(`
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `);

            $.ajax({
                url: '@Url.Action("Edit", "Customer")',
                type: 'GET',
                data: { id: id },
                success: function(result) {
                    $('#editModalBody').html(result);
                },
                error: function(xhr, status, error) {
                    $('#editModalBody').html(`
                        <div class="alert alert-danger">
                            <h4>Error</h4>
                            <p>Failed to load customer edit form. Please try again.</p>
                        </div>
                    `);
                }
            });
        }

        // Load Customer Delete Confirmation
        function loadCustomerDelete(id) {
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();

            $('#deleteModalBody').html(`
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `);

            $.ajax({
                url: '@Url.Action("Delete", "Customer")',
                type: 'GET',
                data: { id: id },
                success: function(result) {
                    $('#deleteModalBody').html(result);
                },
                error: function(xhr, status, error) {
                    $('#deleteModalBody').html(`
                        <div class="alert alert-danger">
                            <h4>Error</h4>
                            <p>Failed to load delete confirmation. Please try again.</p>
                        </div>
                    `);
                }
            });
        }

        // Handle form submission inside edit modal
        $(document).on('submit', '#editModal form', function(e) {
            e.preventDefault();

            var form = $(this);
            var formData = new FormData(this);

            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success || response.redirectTo) {
                        bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                        location.reload();
                    } else {
                        $('#editModalBody').html(response);
                    }
                },
                error: function(xhr, status, error) {
                    $('#editModalBody').html(`
                        <div class="alert alert-danger">
                            <h4>Error</h4>
                            <p>Failed to update customer. Please try again.</p>
                        </div>
                    `);
                }
            });
        });

        // Handle delete confirmation
        $(document).on('submit', '#deleteModal form', function(e) {
            e.preventDefault();

            var form = $(this);
            var formData = new FormData(this);

            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    location.reload();
                },
                error: function(xhr, status, error) {
                    $('#deleteModalBody').html(`
                        <div class="alert alert-danger">
                            <h4>Error</h4>
                            <p>Failed to delete customer. Please try again.</p>
                        </div>
                    `);
                }
            });
        });
    </script>
}