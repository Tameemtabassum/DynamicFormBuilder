@using DynamicFormBuilder.ViewModels
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<DynamicFormBuilder.ViewModels.CustomerViewModel>

@{
    ViewData["Title"] = "Customer List";
    var count = Model.FirstItemOnPage;
}

<h2 class="mt-3">Customer List</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-primary" asp-action="Create">Add New Customer</a>
        <a asp-action="Excel_Download"
           asp-route-phone="@(ViewBag.Phone ?? "")"
           asp-route-divisionId="@(ViewBag.DivisionId ?? 0)"
           class="btn btn-success">
            Download Excel
        </a>
    </div>
    <div>
        <span class="badge bg-info text-dark">Total Records: @Model.TotalItemCount</span>
    </div>
</div>

<!-- Search Form -->
<form method="get" asp-action="Index" class="mb-3">
    <div class="row g-2 align-items-end">

        <!-- Phone -->
        <div class="col-md-3">
            <input type="text"
                   name="phone"
                   value="@ViewBag.Phone"
                   class="form-control"
                   placeholder="Phone" />
        </div>
        <!-- Division -->
        <div class="col-md-3">
            <select name="divisionId" class="form-control">
                <option value="">All Divisions</option>
                @foreach (var division in (List<SelectListItem>)ViewBag.DivisionList)
                {
                    <option value="@division.Value"
                            selected="@(ViewBag.DivisionId?.ToString() == division.Value)">
                        @division.Text
                    </option>
                }
            </select>
        </div>
       
        <!-- Search Button -->
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>

        <!-- Reset Button -->
        <div class="col-md-2 d-grid">
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>

    </div>
</form>

<!-- Table -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>SL</th>
            <th>Full Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>NID</th>
            <th>Division</th>
            <th>District</th>
            <th>DOB</th>
            <th>Profession</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@(count++)</td>
                    <td>@item.FullName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.NID</td>
                    <td>@item.DivisionName</td>
                    <td>@item.DistrictName</td>
                    <td>@(item.DOB?.ToString("yyyy-MM-dd"))</td>
                    <td>@item.Profession</td>
                    <td>@item.Balance.ToString("N2")</td>
                    <td style="white-space: nowrap;">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CustomerID">Edit</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.CustomerID">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CustomerID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center text-muted">No customers found.</td>
            </tr>
        }
    </tbody>
</table>



<!-- Pagination Controls -->
<div class="mx-2 my-2">
    @Html.PaginationFor(
        Model,
        page => Url.Action("Index", new
        {
            phone = ViewBag.Phone,
            divisionId = ViewBag.DivisionId,
            page,
            pageSize = Model.PageSize
        })
    )
</div>