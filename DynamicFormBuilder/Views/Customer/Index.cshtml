@model IEnumerable<DynamicFormBuilder.ViewModels.CustomerViewModel>

@{
    ViewData["Title"] = "Customer List";

    var phone = ViewBag.SearchPhone;
    var divisionId = ViewBag.SearchDivisionId;

    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalRecords = ViewBag.TotalRecords ?? 0;

    var pageSize = ViewBag.PageSize ?? 10;   
    var count = ((currentPage - 1) * pageSize) + 1;
}


<h2 class="mt-3">Customer List</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>

<a class="btn btn-primary" asp-action="Create">Add New Customer</a>

<a asp-action="Excel_Download"
   asp-route-phone="@(phone ?? "")"
   asp-route-divisionId="@(divisionId ?? 0)"
   class="btn btn-success">
    Download Excel
</a>
</div>
<div>
    <span class="badge bg-info text-dark">Total Records: @totalRecords</span>
</div>
</div>

<form method="get" asp-action="Index" class="mb-3">
    <div class="row g-2 align-items-end">

        <!-- Phone -->
        <div class="col-md-3">
            <input type="text"
                   name="phone"
                   value="@ViewBag.SearchPhone"
                   class="form-control"
                   placeholder="Phone" />
        </div>

        <!-- Division -->
        <div class="col-md-3">
            <select name="divisionId" class="form-control">
                <option value="">All Divisions</option>
                @foreach (var division in (List<SelectListItem>)ViewBag.DivisionList)
                {
                    <option value="@division.Value"
                            selected="@(ViewBag.SearchDivisionId?.ToString() == division.Value)">
                        @division.Text
                    </option>
                }
            </select>
        </div>

        <!-- Page Size -->
        <div class="col-md-2">
            <select name="pageSize" class="form-control">
                @foreach (var size in (List<int>)ViewBag.PageSizeOptions)
                {
                    <option value="@size"
                            selected="@(ViewBag.PageSize == size)">
                        @size
                    </option>
                }
            </select>
        </div>

        <!-- Search Button -->
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">
                Search
            </button>
        </div>

        <!-- Reset Button -->
        <div class="col-md-2 d-grid">
            <a asp-action="Index" class="btn btn-secondary">
                Reset
            </a>
        </div>

    </div>
</form>






<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>SL</th>
            <th>Full Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>NID</th>
            <th>Division</th>
            <th>District</th>
            <th>DOB</th>
            <th>Profession</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@item.FullName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.NID</td>
                <td>@item.DivisionName</td>
                <td>@item.DistrictName</td>
                <td>@String.Format("{0:yyyy-MM-dd}", item.DOB)</td>
                <td>@item.Profession</td>
                <td>@item.Balance.ToString("N2")</td>
                <td style="white-space: nowrap;">
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CustomerID">Edit</a>
                    <a href="@Url.Action("Details", "Customer", new { id = item.CustomerID })"
                       class="btn btn-info btn-sm">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CustomerID">Delete</a>
                </td>

            </tr>
        }
        
    </tbody>
</table>



<!-- Pagination Controls -->
@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous Button -->
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(currentPage - 1)"
                   asp-route-phone="@phone"
                   asp-route-divisionId="@divisionId">
                    Previous
                </a>
            </li>

            <!-- First Page -->
            @if (currentPage > 3)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="1"
                       asp-route-phone="@phone"
                       asp-route-divisionId="@divisionId">
                        1
                    </a>
                </li>
                @if (currentPage > 4)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
            }

            <!-- Page Numbers -->
            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-phone="@phone"
                       asp-route-divisionId="@divisionId">
                        @i
                    </a>
                </li>
            }

            <!-- Last Page -->
            @if (currentPage < totalPages - 2)
            {
                @if (currentPage < totalPages - 3)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@totalPages"
                       asp-route-phone="@phone"
                       asp-route-divisionId="@divisionId">
                        @totalPages
                    </a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(currentPage + 1)"
                   asp-route-phone="@phone"
                   asp-route-divisionId="@divisionId">
                    
                </a>
            </li>
        </ul>
    </nav>

    <!-- Page Info -->
    <div class="text-center mb-3">
        <span class="text-muted">
            Page @currentPage of @totalPages (Showing @Model.Count() of @totalRecords records)
        </span>
    </div>
}
