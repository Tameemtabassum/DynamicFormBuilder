@using Microsoft.AspNetCore.Identity
@using DynamicFormBuilder.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    bool isAuthPage = controller == "Account" && (action == "Login" || action == "Register");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dynamic Form Builder</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Pagination JS -->
    <link rel="stylesheet" href="~/css/site.js" asp-append-version="true" />

    <style>
        body {
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
        }
            /* Auth Page Styles */
            body.auth-page {
                background: linear-gradient(135deg, #e0e7ff 0%, #f3f4f6 100%);
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                body.auth-page .sidebar {
                    display: none !important;
                }

                body.auth-page .main-content {
                    margin-left: 0 !important;
                }

                body.auth-page .footer {
                    display: none !important;
                }

        .auth-container {
            width: 100%;
            max-width: 450px;
            padding: 20px;
        }

        .auth-card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            background: white;
            overflow: hidden;
        }

        .auth-card-header {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
            padding: 25px 30px; 
            text-align: center;
            border: none;
        }

            .auth-card-header h2 {
                margin: 5px 0 3px 0; 
                font-weight: 700;
                font-size: 1.6rem; 
                color: white;
            }

            .auth-card-header i {
                font-size: 2.5rem; 
                margin-bottom: 8px; 
                display: block;
                color: white;
                opacity: 0.95;
            }

            .auth-card-header p {
                margin: 3px 0 0 0; 
                color: rgba(255,255,255,0.9);
                font-size: 0.9rem; 
            }

        .auth-card .card-body {
            padding: 25px 35px; 
            background: white;
        }

        .auth-card .form-label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 6px; 
            font-size: 0.9rem;
        }

        .auth-card .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            padding: 10px 14px; 
            font-size: 0.95rem;
            transition: all 0.2s ease;
            background-color: #f9fafb;
        }

        .auth-card .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border: none;
            padding: 11px; 
            font-weight: 600;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .auth-card .card-footer {
            background: linear-gradient(to bottom, #f9fafb 0%, #f3f4f6 100%);
            border-radius: 0;
            padding: 18px 35px; 
            text-align: center;
            border-top: 1px solid #e5e7eb;
            color: #6b7280;
        }

        
        .auth-card .mb-3 {
            margin-bottom: 0.8rem !important; /* ← Reduced spacing */
        }

        .auth-card .alert {
            border-radius: 10px;
            font-size: 0.9rem;
            border: none;
        }

        .auth-card .alert-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .auth-card .row .col-md-6 {
            padding-left: 8px;
            padding-right: 8px;
        }

        .auth-card .row {
            margin-left: -8px;
            margin-right: -8px;
        }
        /* Sidebar styles  */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 245px;
            background: linear-gradient(180deg, #1e3a8a 0%, #1e40af 100%);
            padding-top: 0;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar-brand {
            padding: 20px 20px;
            color: white;
            font-size: 1.3rem;
            font-weight: bold;
            text-decoration: none;
            display: block;
            background-color: rgba(0,0,0,0.2);
            margin-bottom: 20px;
        }

            .sidebar-brand:hover {
                color: #ffffff;
                background-color: rgba(0,0,0,0.3);
            }

            .sidebar-brand i {
                margin-right: 8px;
            }

        .sidebar-nav {
            list-style: none;
            padding: 0 10px;
            margin: 0;
        }

            .sidebar-nav li {
                margin: 5px 0;
            }

            .sidebar-nav a {
                display: flex;
                align-items: center;
                padding: 14px 16px;
                color: rgba(255,255,255,0.9);
                text-decoration: none;
                transition: all 0.3s ease;
                border-radius: 8px;
                font-size: 0.95rem;
            }

                .sidebar-nav a:hover {
                    background-color: rgba(255,255,255,0.15);
                    color: white;
                    transform: translateX(5px);
                }

                .sidebar-nav a.active {
                    background-color: #3b82f6;
                    color: white;
                    box-shadow: 0 4px 6px rgba(59, 130, 246, 0.3);
                }

                .sidebar-nav a i {
                    margin-right: 12px;
                    width: 20px;
                    font-size: 1.1rem;
                }

        /* User Profile Section in Sidebar */
        .sidebar-user {
            padding: 15px 10px;
            border-top: 1px solid rgba(255,255,255,0.1);
            margin-top: auto;
            position: absolute;
            bottom: 0;
            width: 100%;
            background-color: rgba(0,0,0,0.2);
        }

        .user-info {
            display: flex;
            align-items: center;
            padding: 10px 16px;
            color: white;
            font-size: 0.9rem;
        }

            .user-info i {
                margin-right: 10px;
                font-size: 1.2rem;
            }

        .logout-btn {
            background: none;
            border: none;
            color: rgba(255,255,255,0.9);
            cursor: pointer;
            padding: 0;
            width: 100%;
            text-align: left;
        }

            .logout-btn:hover {
                color: white;
            }

        /* Main Content Area */
        .main-content {
            margin-left: 260px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            padding: 25px;
            flex: 1;
            overflow-x: auto;
        }

        /* Table */
        .table-responsive {
            overflow-x: auto;
        }

        /* Footer */
        .footer {
            background-color: white;
            padding: 20px;
            margin-top: 40px;
            border-top: 1px solid #e5e7eb;
        }

        .card {
            box-shadow: 0 1px 3px rgba(0,0,0,.1);
            border: none;
            border-radius: 10px;
        }

        .field-item {
            transition: all 0.3s ease;
        }

            .field-item:hover {
                box-shadow: 0 4px 8px rgba(0,0,0,.15);
            }

        .table-striped tbody tr:hover {
            background-color: #f3f4f6;
        }

        /* Page Title Styling */
        h1, h2 {
            color: #1e3a8a;
            font-weight: 600;
        }

        /* Button Styling */
        .btn-primary {
            background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #1d4ed8 0%, #2563eb 100%);
            }

        .btn-success {
            background: linear-gradient(135deg, #059669 0%, #10b981 100%);
            border: none;
        }

            .btn-success:hover {
                background: linear-gradient(135deg, #047857 0%, #059669 100%);
            }

        /* Ensure content doesn't overflow */
        .container-fluid {
            max-width: 100%;
            overflow-x: hidden;
        }
    </style>
</head>

<body class="@(isAuthPage ? "auth-page" : "")">

    @if (TempData["success"] != null)
    {
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
            <div id="successToast"
                 class="toast align-items-center text-bg-success border-0"
                 role="alert"
                 aria-live="assertive"
                 aria-atomic="true">

                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @TempData["success"]
                    </div>
                    <button type="button"
                            class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast"
                            aria-label="Close"></button>
                </div>

            </div>
        </div>
    }

    @if (!isAuthPage)
    {
        <!-- Sidebar -->
        <aside class="sidebar">
            <a class="sidebar-brand" asp-area="" asp-controller="Form" asp-action="Index">
                <i class="bi bi-file-earmark-text"></i> Dynamic Form Builder
            </a>
            <ul class="sidebar-nav">
                <li>
                    <a asp-area="" asp-controller="Form" asp-action="Index">
                        <i class="bi bi-list-ul"></i> Forms List
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Students" asp-action="Index">
                        <i class="bi bi-people"></i> Student List
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Customer" asp-action="Index">
                        <i class="bi bi-person-badge"></i> Customer List
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Participants" asp-action="Index">
                        <i class="bi bi-person-check"></i> Participant List
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Employee" asp-action="Index">
                        <i class="bi bi-briefcase"></i> Employee List
                    </a>
                </li>
            </ul>

            <!-- User Profile Section -->
            <div class="sidebar-user">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="user-info">
                        <i class="bi bi-person-circle"></i>
                        <span>@User.Identity.Name</span>
                    </div>
                    <div class="sidebar-nav">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="logout-btn sidebar-nav a">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    </div>
                }
            </div>
        </aside>
    }

    <!-- Main Content -->
    <div class="main-content">
        <main role="main">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>

        @if (!isAuthPage)
        {
            <footer class="footer text-muted">
                <div class="container-fluid text-center">
                    &copy; 2026 - Tameem - <a asp-area="" asp-controller="Form" asp-action="Index">Home</a>
                </div>
            </footer>
        }
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Highlight active menu
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname.toLowerCase();
            const menuLinks = document.querySelectorAll('.sidebar-nav a');

            menuLinks.forEach(link => {
                const linkPath = link.getAttribute('href');
                if (linkPath && currentPath.includes(linkPath.toLowerCase().split('/').pop())) {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

@if (TempData["success"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var toastEl = document.getElementById('successToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl, {
                    delay: 3000
                });
                toast.show();
            }
        });
    </script>
}
</html>